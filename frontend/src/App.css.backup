  transform: translateY(-50%) rotate(-12deg);
}

.product-price-shop .current-price {
  color: #00d9ff;
  font-weight: 700;
}

.shop-link {
  font-size: 13px;
  color: var(--brand-primary);
  font-weight: 500;
}

.product-status-shop {
  font-size: 14px;
  color: var(--text-muted);
}

