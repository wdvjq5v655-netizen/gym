/* ========================================
   MOBILE OPTIMIZATIONS - TOUCH & READABILITY
   ======================================== */

@media (max-width: 768px) {
  /* Minimum 16px body text for readability */
  body {
    font-size: 16px;
    line-height: 1.6;
  }
  
  /* All paragraph text minimum 16px */
  p {
    font-size: 16px !important;
  }
  
  /* Button minimum touch target 44x44px */
  button,
  .btn,
  .button,
  a.button {
    min-height: 44px;
    min-width: 44px;
    padding: 12px 20px;
    font-size: 16px;
  }
  
  /* Primary CTA buttons */
  .hero-cta,
  .cta-button,
  .add-to-cart-btn,
  .checkout-btn,
  .giveaway-btn,
  .newsletter-btn {
    min-height: 48px;
    padding: 14px 24px;
    font-size: 16px;
  }
  
  /* Form inputs touch-friendly */
  input,
  textarea,
  select {
    min-height: 44px;
    font-size: 16px; /* Prevents zoom on iOS */
    padding: 12px 16px;
  }
  
  /* Size selector buttons */
  .size-btn,
  .modal-size-btn {
    min-height: 44px;
    min-width: 44px;
    font-size: 16px;
    padding: 12px;
  }
  
  /* Icon buttons (cart, wishlist, user) */
  .cart-icon-btn,
  .user-icon-btn,
  .wishlist-icon-btn {
    min-height: 44px;
    min-width: 44px;
    padding: 0px;
    margin: 0px;
  }
  
  /* Quantity controls */
  .quantity-btn {
    min-height: 44px;
    min-width: 44px;
    font-size: 20px;
  }
  
  /* Product card touch area */
  .product-card-shop {
    min-height: 44px;
  }
  
  /* Modal close buttons */
  .modal-close,
  .close-btn,
  .popup-close {
    min-height: 44px;
    min-width: 44px;
    padding: 10px;
  }
  
  /* Navigation links */
  .nav-link,
  .header-link {
    min-height: 44px;
    padding: 12px 16px;
    font-size: 16px;
  }
  
  /* Footer links */
  .footer-link a {
    min-height: 44px;
    padding: 12px 0;
    font-size: 16px;
    display: inline-block;
  }
  
  /* Readable headings */
  h1 {
    font-size: 32px;
  }
  
  h2 {
    font-size: 28px;
  }
  
  h3 {
    font-size: 24px;
  }
  
  h4 {
    font-size: 20px;
  }
  
  /* Product prices */
  .product-price,
  .price {
    font-size: 18px;
  }
  
  /* Card descriptions */
  .product-description,
  .card-description {
    font-size: 16px;
  }
  
  /* Labels */
  label,
  .form-label {
    font-size: 16px;
  }
}

/* ========================================
   MOBILE IMPROVEMENTS - DO NOT AFFECT DESKTOP
   ======================================== */

@media (max-width: 768px) {
  
  /* -----------------------------------
     1. MOBILE NAVIGATION - SLIDE IN MENU
     ----------------------------------- */
  .mobile-nav {
    position: fixed;
    top: 60px;
    right: 16px;
    left: auto;
    bottom: auto;
    width: 200px;
    background: #111111;
    border: 1px solid var(--border-light);
