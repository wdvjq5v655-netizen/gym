  width: 90%;
  max-height: 90vh;
  overflow-y: auto;
  z-index: 9999;
  box-shadow: 0 8px 40px rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.giveaway-close {
  position: absolute;
  top: 10px;
  right: 10px;
  background: none;
  border: none;
  color: var(--text-muted);
  cursor: pointer;
  padding: 4px;
  opacity: 0.7;
  transition: opacity 0.15s ease;
  z-index: 10;
}

.giveaway-close:hover {
  opacity: 1;
}

.giveaway-content {
  padding: 0 24px 22px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* Countdown Timer */
.giveaway-timer {
  position: absolute;
  top: 12px;
  left: 12px;
  background: rgba(255, 140, 0, 0.15);
  border: 1px solid rgba(255, 140, 0, 0.4);
  padding: 3px 8px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 11px;
  font-weight: 600;
  color: #ff8c00;
  z-index: 5;
  animation: timerPulse 2s ease-in-out infinite;
}

.timer-icon {
  font-size: 10px;
  animation: timerShake 1s ease-in-out infinite;
}

.timer-text {
  letter-spacing: 0.3px;
}

@keyframes timerPulse {
  0%, 100% {
    box-shadow: 0 0 6px rgba(255, 140, 0, 0.3);
  }
  50% {
    box-shadow: 0 0 12px rgba(255, 140, 0, 0.5);
  }
}

@keyframes timerShake {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-10deg);
  }
  75% {
    transform: rotate(10deg);
  }
}

