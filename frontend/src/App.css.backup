/* ========================================
   SHARE BUTTON
   ======================================== */
.share-button-container {
  position: relative;
}

/* Share trigger button - BIGGER like wishlist icon */
.share-trigger {
  background: rgba(0, 0, 0, 0.5);
  border: none;
  color: #fff;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.share-trigger svg {
  width: 22px;
  height: 22px;
}

.share-trigger:hover {
  background: rgba(0, 0, 0, 0.7);
  transform: scale(1.1);
}

.share-trigger:active {
  transform: scale(0.95);
}

/* Share dropdown menu */
.share-dropdown {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  background: var(--bg-card, #141414);
  border: 1px solid var(--border-light, #2a2a2a);
  border-radius: 12px;
  min-width: 220px;
  z-index: 1000;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 20px rgba(0, 217, 255, 0.1);
  animation: dropdownFadeIn 0.2s ease;
}

@keyframes dropdownFadeIn {
  from {
    opacity: 0;
    transform: translateY(-8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.share-dropdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  border-bottom: 1px solid var(--border-light, #2a2a2a);
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary, #fff);
}

.share-dropdown-header button {
  background: none;
  border: none;
  color: var(--text-muted, #666);
  cursor: pointer;
  padding: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.2s ease;
}

.share-dropdown-header button:hover {
  color: var(--text-primary, #fff);
}

.share-dropdown-options {
  padding: 8px;
}

.share-dropdown-option {
  display: flex;
  align-items: center;
  gap: 14px;
  width: 100%;
  padding: 14px 12px;
  background: none;
  border: none;
  color: var(--text-secondary, #999);
  font-size: 15px;
  cursor: pointer;
  border-radius: 8px;
  transition: all 0.15s ease;
  text-align: left;
}

.share-dropdown-option:hover {
  background: rgba(0, 217, 255, 0.08);
  color: var(--text-primary, #fff);
}

.share-dropdown-option svg {
  flex-shrink: 0;
  width: 22px;
  height: 22px;
}

.share-dropdown-option.copy-link {
  border-top: 1px solid var(--border-light, #2a2a2a);
  margin-top: 4px;
  padding-top: 14px;
}

/* Modal share button position */
.modal-share {
  position: relative;
  margin-bottom: 16px;
  display: flex;
  justify-content: flex-end;
}

/* ========================================
   MOBILE SHARE DROPDOWN - Bottom sheet style
   ======================================== */
@media (max-width: 768px) {
  /* ========================================
     SHARE BUTTON - MOBILE GLOBAL
     Match X button exactly for visual parity
     ======================================== */
  .share-trigger {
    width: 52px;
    height: 52px;
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: #fff;
    display: grid;
    place-items: center;
    padding: 0;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }
  
  /* Icon - match X icon optical weight */
  .share-trigger svg {
    width: 22px;
    height: 22px;
    color: #fff;
    stroke-width: 2.25;
  }
  
  .share-trigger:active {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(0.95);
  }
  
  /* In modal header - same as above */
  .modal-header-actions .share-trigger,
  .modal-header-actions .modal-share-header .share-trigger {
    width: 52px;
    height: 52px;
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: grid;
    place-items: center;
    padding: 0;
  }
  
  .modal-header-actions .share-trigger svg,
  .modal-header-actions .modal-share-header .share-trigger svg {
    width: 22px;
    height: 22px;
    stroke-width: 2.25;
  }
  
  .modal-share {
    display: flex !important;
  }
  
  /* Bottom sheet dropdown on mobile */
  .share-dropdown {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: auto;
    border-radius: 20px 20px 0 0;
    min-width: 100%;
    max-height: 70vh;
    animation: slideUpDropdown 0.3s ease;
  }
  
  @keyframes slideUpDropdown {
    from {
      opacity: 0;
      transform: translateY(100%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .share-dropdown-header {
    padding: 18px 20px;
    font-size: 16px;
  }
  
  .share-dropdown-options {
    padding: 12px 16px 32px 16px;
  }
  
  .share-dropdown-option {
    padding: 16px 14px;
    font-size: 16px;
    gap: 16px;
  }
  
  .share-dropdown-option svg {
    width: 24px;
    height: 24px;
  }
}

