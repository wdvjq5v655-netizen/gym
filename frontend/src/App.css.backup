/* ========================================
   WAITLIST BANNER
   ======================================== */
.waitlist-banner-placeholder {
  transition: height 0.2s ease;
}

.waitlist-banner {
  background: linear-gradient(90deg, rgba(0, 217, 255, 0.08) 0%, rgba(168, 85, 247, 0.06) 50%, rgba(0, 217, 255, 0.08) 100%);
  border-top: 1px solid rgba(0, 217, 255, 0.3);
  border-bottom: 1px solid rgba(0, 217, 255, 0.4);
  padding: 12px 20px;
  position: relative;
  z-index: 998;
  box-shadow: 0 4px 24px rgba(0, 217, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  /* Full width - break out of any container */
  width: 100%;
  margin-left: 0;
  margin-right: 0;
  left: 0;
  right: 0;
}

.waitlist-banner:hover {
  background: linear-gradient(90deg, rgba(0, 217, 255, 0.12) 0%, rgba(168, 85, 247, 0.08) 50%, rgba(0, 217, 255, 0.12) 100%);
  box-shadow: 0 6px 32px rgba(0, 217, 255, 0.2);
}

/* Sticky state - fixed to top when scrolled */
.waitlist-banner.is-sticky {
  position: fixed;
  top: 72px;
  left: 0;
  right: 0;
  width: 100%;
  background: linear-gradient(90deg, rgba(0, 217, 255, 0.15) 0%, rgba(168, 85, 247, 0.12) 50%, rgba(0, 217, 255, 0.15) 100%);
  box-shadow: 0 4px 20px rgba(0, 217, 255, 0.2), 0 2px 8px rgba(0, 0, 0, 0.4);
  border-bottom: 1px solid rgba(0, 217, 255, 0.5);
}

.banner-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32px;
  flex-wrap: wrap;
}

.banner-left, .banner-center, .banner-right {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  color: var(--text-secondary);
  font-weight: 600;
}

.banner-icon {
  color: #F97316;
  animation: pulse-flame 1.5s ease-in-out infinite;
  filter: drop-shadow(0 0 8px rgba(249, 115, 22, 0.5));
  width: 18px;
  height: 18px;
}

@keyframes pulse-flame {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.sold-out-text {
  font-weight: 800;
  color: #F97316;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  font-size: 13px;
}

.join-now-text {
  font-weight: 800;
  color: var(--brand-primary);
  letter-spacing: 0.06em;
  text-transform: uppercase;
  animation: pulseGlow 2s ease-in-out infinite;
  cursor: pointer;
  transition: all 0.3s ease;
}

.join-now-text:hover {
  transform: translateX(4px);
  color: #ffffff;
}

@keyframes pulseGlow {
  0%, 100% {
    text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
  }
  50% {
    text-shadow: 0 0 20px rgba(0, 217, 255, 0.8);
  }
}

.banner-center strong,
.banner-right strong {
  color: var(--brand-primary);
  font-size: 14px;
}

.countdown-inline {
  font-variant-numeric: tabular-nums;
  font-weight: 600;
  color: var(--text-primary);
}

.waitlist-count-inline {
  font-size: 13px;
}

.waitlist-count-inline strong {
  color: var(--brand-primary);
  font-weight: 700;
}

