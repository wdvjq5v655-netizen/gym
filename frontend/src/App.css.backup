  gap: 8px;
}

@media (max-width: 768px) {
  .tracking-form .form-row {
    flex-direction: column;
  }
  
  .tracking-btn {
    width: 100%;
  }
}

.tracking-error {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
