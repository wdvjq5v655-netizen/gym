/* ========================================
   GLOBAL MINIMUM SIZES
   These apply across ALL breakpoints
   ======================================== */

/* All buttons must have minimum touch target */
button,
.btn,
[role="button"] {
  min-height: 44px;
}

/* All form inputs must be readable */
input,
select,
textarea {
  min-height: 44px;
  font-size: max(16px, 1rem); /* Prevents zoom on iOS */
}

/* All clickable items need sufficient size */
a,
.nav-link,
.dropdown-item {
  min-height: 44px;
  display: inline-flex;
  align-items: center;
}

/* ========================================
   HORIZONTAL SCROLL FOR OVERFLOW CONTENT
   When content can't fit, allow scrolling instead of squishing
   ======================================== */

.scroll-x-mobile {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  display: flex;
  gap: 16px;
  padding-bottom: 8px;
}

.scroll-x-mobile::-webkit-scrollbar {
  display: none;
}

.scroll-x-mobile > * {
  flex-shrink: 0;
}

/* Payment icons - horizontal scroll on very small screens */
@media (max-width: 375px) {
  .payment-icons,
  .payment-icons-grid {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    flex-wrap: nowrap !important;
    justify-content: flex-start !important;
    padding-bottom: 8px;
  }
  
  .payment-icon,
  .payment-icon-card {
    flex-shrink: 0 !important;
  }
}

/* ========================================
   SAFE AREA INSETS (Notched iPhones)
   ======================================== */

/* Header respects safe area */
.site-header {
  padding-top: env(safe-area-inset-top, 0);
}

/* Bottom navigation/buttons respect safe area */
.fixed-bottom,
.sticky-bottom {
  padding-bottom: env(safe-area-inset-bottom, 0);
}

/* Left/right safe areas for landscape */
@media (orientation: landscape) {
  .container {
    padding-left: max(16px, env(safe-area-inset-left));
    padding-right: max(16px, env(safe-area-inset-right));
  }
}

/* ========================================
   PREVENT LAYOUT SHIFTS
   ======================================== */

/* Fixed aspect ratios prevent content jumps */
.product-image-wrapper {
  aspect-ratio: 3/4;
}

/* Skeleton loading states */
.skeleton {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  background: linear-gradient(90deg, #1a1a1a 25%, #2a2a2a 50%, #1a1a1a 75%);
  background-size: 200% 100%;
}

@keyframes pulse {
  0%, 100% {
    background-position: 200% 0;
  }
  50% {
    background-position: -200% 0;
  }
}

/* ========================================
   DESKTOP RESPONSIVE SYSTEM
   "Scale UP only — No stretch, No squish"
   
   Rules:
   1. Token-based spacing (never shrink)
   2. Max-width containers (no ultrawide stretch)
   3. Step-based scaling at breakpoints
   4. Re-flow grids (4→3→2→1 columns)
   5. Typography clamp with minimums
   ======================================== */

